{
  "entrypoint": "index.html",
  "shell": "src/index.js",
  "extraDependencies": [
    "node_modules/@webcomponents/webcomponentsjs/**/*.js",
    "node_modules/@webcomponents/webcomponentsjs/**/*.map"
  ],
  "lint": {
    "rules": ["polymer-3"]
  },
  "builds": [
    {
      "name": "es2015",
      "browserCapabilities": ["es2015", "modules"],
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": false
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
